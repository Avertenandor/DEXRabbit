{
  "name": "dexrabbit",
  "version": "1.0.0",
  "description": "DEXRabbit - Tokenized Rabbit Farm",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check:base": "node scripts/check-base.mjs",
    "check:all": "npm run build && npm run preview & sleep 2 && npm run test:e2e && npm run test:assets && npm run test:content",
    "test": "npm run test:unit && npm run test:e2e && npm run test:vis && npm run test:a11y && npm run test:perf",
    "test:unit": "vitest run tests/unit",
    "test:e2e": "playwright test tests/e2e",
    "test:vis": "playwright test tests/vis",
    "test:a11y": "playwright test tests/a11y",
    "test:perf": "lighthouse-ci autorun",
    "test:assets": "vitest run tests/assets",
    "test:content": "vitest run tests/content",
    "lint": "eslint . --ext .js,.ts,.astro",
    "format": "prettier --write .",
    "selfcheck": "npm run check:all"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.0",
    "@lhci/cli": "^0.12.0",
    "vitest": "^1.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/dom": "^9.0.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  }
}

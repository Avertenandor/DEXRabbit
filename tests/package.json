{
  "name": "kupitkrolika-tests",
  "version": "1.0.0",
  "description": "Testing suite for КупитьКролика website",
  "scripts": {
    "test": "jest",
    "test:mobile": "jest --testNamePattern=\"Mobile\"",
    "test:performance": "jest --testNamePattern=\"Performance\"",
    "test:browser": "jest --testNamePattern=\"Cross-Browser\"",
    "test:flow": "jest --testNamePattern=\"User Flow\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "puppeteer": "^21.0.0",
    "jest-puppeteer": "^9.0.0"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "verbose": true
  }
}
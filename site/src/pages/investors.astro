---
import BaseLayout from '../layouts/BaseLayout.astro';

// Данные инвесторов (в реальности из JSON или API)
const investorsData = [
    {
        name: "Алексей К.",
        telegram: "@alexei_k",
        investment: 1500,
        date: "2024-09-15",
        returns: 1847
    },
    {
        name: "Мария В.",
        telegram: "@maria_v_investor",
        investment: 2000,
        date: "2024-08-10",
        returns: 2456
    },
    {
        name: "Дмитрий С.",
        telegram: "@dmitry_s",
        investment: 800,
        date: "2024-10-01",
        returns: 832
    }
];
---

<BaseLayout title="Карточки инвесторов  DEXRabbit"
           description=" Успешные истории наших инвесторов: реальные люди, реальные результаты, прозрачность доходности фермы DEXRabbit">
    
    <section class="section section-primary">
        <div class="container">
            <div class="section-header section-header-white">
                <h1 class="section-title"> Наши инвесторы</h1>
                <p class="section-description">
                    Реальные люди с реальными результатами
                </p>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <div class="investors-intro">
                <h2> Успешные истории</h2>
                <p>Все инвесторы дали согласие на публикацию своих результатов для демонстрации прозрачности проекта.</p>
            </div>
            
            <div class="investors-grid">
                {investorsData.map(investor => {
                    const profitPercent = ((investor.returns - investor.investment) / investor.investment * 100).toFixed(1);
                    const isProfit = investor.returns > investor.investment;
                    
                    return (
                        <div class="investor-card">
                            <div class="investor-header">
                                <div class="investor-avatar">
                                    {investor.name.charAt(0)}
                                </div>
                                <div class="investor-info">
                                    <h3 class="investor-name">{investor.name}</h3>
                                    <a href={https://t.me/} 
                                       class="investor-telegram" 
                                       target="_blank">
                                        {investor.telegram}
                                    </a>
                                </div>
                            </div>
                            
                            <div class="investment-details">
                                <div class="detail-row">
                                    <span class="detail-label">Вложено:</span>
                                    <span class="detail-value"></span>
                                </div>
                                
                                <div class="detail-row">
                                    <span class="detail-label">Дата входа:</span>
                                    <span class="detail-value">{new Date(investor.date).toLocaleDateString('ru-RU')}</span>
                                </div>
                                
                                <div class="detail-row">
                                    <span class="detail-label">Текущая стоимость:</span>
                                    <span class={detail-value }>
                                        
                                    </span>
                                </div>
                                
                                <div class="profit-indicator">
                                    <span class={profit-percent }>
                                        {isProfit ? '+' : ''}{profitPercent}%
                                    </span>
                                    <span class="profit-label">
                                        {isProfit ? 'прибыль' : 'убыток'}
                                    </span>
                                </div>
                            </div>
                            
                            <div class="investor-status">
                                <div class="status-badge active">Активный инвестор</div>
                            </div>
                        </div>
                    );
                })}
            </div>
            
            <div class="disclaimer-section">
                <div class="disclaimer">
                    <h3> Важная информация</h3>
                    <ul>
                        <li>Результаты показаны с согласия инвесторов</li>
                        <li>Прошлые результаты не гарантируют будущую прибыль</li>
                        <li>Все инвестиции связаны с рисками</li>
                        <li>Гарантирован только возврат вклада, но не прибыль</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="section section-primary">
        <div class="container">
            <div class="section-header section-header-white">
                <h2 class="section-title"> Присоединяйтесь к успешным инвесторам</h2>
                <p class="section-description">
                    Начните инвестировать с минимальной суммы 100 USDT
                </p>
            </div>
            
            <div class="cta-buttons">
                <a href="/investment-model" class="btn btn-secondary btn-large">
                     Узнать условия
                </a>
                <a href="/contacts" class="btn btn-outline btn-large">
                     Задать вопросы
                </a>
            </div>
        </div>
    </section>

</BaseLayout>

<style>
.investors-intro {
    text-align: center;
    margin-bottom: 3rem;
}

.investors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
}

.investor-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 16px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.investor-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
}

.investor-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.investor-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary) 0%, #5a9fd4 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 600;
}

.investor-info {
    flex: 1;
}

.investor-name {
    margin: 0 0 0.25rem 0;
    font-size: 1.1rem;
    font-weight: 600;
}

.investor-telegram {
    color: #0088cc;
    text-decoration: none;
    font-size: 0.9rem;
}

.investor-telegram:hover {
    text-decoration: underline;
}

.investment-details {
    margin-bottom: 1.5rem;
}

.detail-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #f0f0f0;
}

.detail-row:last-child {
    border-bottom: none;
    margin-bottom: 1rem;
}

.detail-label {
    color: #666;
    font-size: 0.9rem;
}

.detail-value {
    font-weight: 600;
}

.detail-value.profit {
    color: #4caf50;
}

.detail-value.loss {
    color: #f44336;
}

.profit-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 12px;
}

.profit-percent {
    font-size: 1.25rem;
    font-weight: 700;
}

.profit-percent.positive {
    color: #4caf50;
}

.profit-percent.negative {
    color: #f44336;
}

.profit-label {
    font-size: 0.9rem;
    color: #666;
}

.investor-status {
    text-align: center;
}

.status-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
}

.status-badge.active {
    background: #e8f5e8;
    color: #4caf50;
    border: 1px solid #4caf50;
}

.disclaimer-section {
    max-width: 600px;
    margin: 0 auto;
}

.disclaimer {
    background: #fff3e0;
    border: 1px solid #ffb74d;
    border-radius: 12px;
    padding: 1.5rem;
}

.disclaimer h3 {
    margin-bottom: 1rem;
    color: #f57c00;
}

.disclaimer ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.disclaimer li {
    margin-bottom: 0.5rem;
    padding-left: 1.5rem;
    position: relative;
}

.disclaimer li::before {
    content: "";
    position: absolute;
    left: 0;
    color: #f57c00;
    font-weight: bold;
}

.cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
}

@media (max-width: 768px) {
    .investors-grid {
        grid-template-columns: 1fr;
    }
    
    .cta-buttons {
        flex-direction: column;
        align-items: center;
    }
}
</style>

<script>
// Аналитика просмотра страницы
if (window.analytics && typeof window.analytics.trackEvent === 'function') {
    window.analytics.trackEvent('investors_page_view', {
        total_investors: 3,
        timestamp: Date.now()
    });
}

// Отслеживание кликов по Telegram
document.addEventListener('click', (e) => {
    if (e.target.matches('.investor-telegram')) {
        if (window.analytics && typeof window.analytics.trackEvent === 'function') {
            window.analytics.trackEvent('investor_telegram_click', {
                investor_telegram: e.target.textContent,
                timestamp: Date.now()
            });
        }
    }
});
</script>

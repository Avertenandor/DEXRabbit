---
const { title = 'Купить кролика — официальный сайт', description = 'Породы, цены, бронирование. Доставка и консультации.' } = Astro.props;
const site = 'https://xn--80apagbbfxgmuj4j.site';
---
<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={site + Astro.url.pathname} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={site + Astro.url.pathname} />
    <meta property="og:image" content={`${site}/og-cover.jpg`} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="bg-[#0b0f14] text-white">
    <slot />
  </body>
</html>
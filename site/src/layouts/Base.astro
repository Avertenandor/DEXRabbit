---
// Base layout for the Rabbit Farm Tokenization project
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyCta from '../components/StickyCta.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "USDT-вход, ежедневные PLEX-бонусы, итоговая выплата в USDT. Форс-мажор — возврат тела в PLEX." } = Astro.props;
---

<!doctype html>
<html lang="ru" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- Icons & PWA -->
    <link rel="icon" href="/favicon.ico">
    <link rel="apple-touch-icon" sizes="192x192" href="/icon-192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/icon-512.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- OpenGraph / Twitter -->
    <meta property="og:title" content="DEXRabbit — USDT-вход, ежедневные PLEX-бонусы, итоговая выплата в USDT">
    <meta property="og:description" content="Штатная модель — USDT-выплата по итогу цикла; форс-мажор — возврат тела в PLEX. Все операции — в Telegram-боте.">
    <meta property="og:image" content="/og/og-image.svg">
    <meta name="twitter:card" content="summary_large_image">

    <!-- Perf hints -->
    <link rel="preconnect" href="https://api.geckoterminal.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="theme-color" content="#0B0D10">

    <!-- Import design tokens -->
    <link rel="stylesheet" href="/src/styles/tokens.css" />

    <!-- Global styles -->
    <style>
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
      }

      @media (min-width: 640px) {
        .container {
          padding-left: 2rem;
          padding-right: 2rem;
        }
      }

      .section {
        padding-top: 5rem;
        padding-bottom: 5rem;
      }

      /* Ensure dark theme is applied immediately */
      html.dark {
        color-scheme: dark;
      }
    </style>
  </head>
  <body class="bg-[var(--bg-primary)] text-[var(--text-primary)] antialiased min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <StickyCta />
  </body>
</html>

<style>
  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    scroll-behavior: smooth;
  }
</style>

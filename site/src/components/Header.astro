---
// Main site header with navigation
---

<header class="sticky top-0 z-50 backdrop-blur bg-black/40">
  <nav class="max-w-[1200px] mx-auto px-4 h-14 flex items-center justify-between">
    <a href="/" class="font-semibold">КупитьКролика</a>
    <button class="lg:hidden" aria-label="Открыть меню" id="navBtn">☰</button>
    <ul id="nav" class="hidden lg:flex gap-6">
      <li><a href="/catalog">Каталог</a></li>
      <li><a href="/#benefits">Преимущества</a></li>
      <li><a href="/#reviews">Отзывы</a></li>
      <li><a href="/faq">FAQ</a></li>
      <li><a href="/contacts">Контакты</a></li>
    </ul>
    <a href="/contacts" class="hidden lg:inline-block rounded-2xl px-4 py-2 bg-emerald-500">Связаться</a>
  </nav>
</header>

<script>
  const navBtn = document.getElementById('navBtn');
  const nav = document.getElementById('nav');
  
  navBtn?.addEventListener('click', () => {
    nav?.classList.toggle('hidden');
  });
</script>
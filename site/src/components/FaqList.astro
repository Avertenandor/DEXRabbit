---
// FAQ List component using Astro Content Collections
import { getCollection } from 'astro:content';

const faqEntries = await getCollection('faq');
const sortedFaq = faqEntries.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
---

<section id="faq" class="section bg-[var(--bg-primary)]">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Section header -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Вопросы и ответы
        </h2>
        <p class="text-xl text-[var(--text-secondary)]">
          Ответы на самые популярные вопросы об инвестициях в кролиководство
        </p>
      </div>

      <!-- FAQ Accordion -->
      <div class="space-y-4">
        {sortedFaq.map((faq, index) => (
          <div class="card group">
            <details class="cursor-pointer">
              <summary class="flex justify-between items-center p-6 list-none">
                <h3 class="text-lg font-semibold text-[var(--text-primary)] pr-4">
                  {faq.data.question}
                </h3>
                <span class="text-[var(--accent-primary)] text-xl transition-transform group-open:rotate-45">
                  +
                </span>
              </summary>
              <div class="px-6 pb-6 pt-2 border-t border-[var(--border-primary)]">
                <div class="prose prose-invert max-w-none">
                  <div class="text-[var(--text-secondary)] leading-relaxed whitespace-pre-line">
                    {faq.data.answer}
                  </div>
                </div>
              </div>
            </details>
          </div>
        ))}
      </div>

      <!-- CTA -->
      <div class="text-center mt-12">
        <p class="text-[var(--text-secondary)] mb-6">
          Остались вопросы? Получите подробные ответы в нашем Telegram-боте
        </p>
        <a
          href="https://t.me/your_bot"
          class="btn-primary text-lg px-8 py-4 inline-block"
          target="_blank"
          rel="noopener noreferrer"
        >
          Задать вопрос в боте
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .card {
    background-color: var(--bg-secondary);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-primary);
    transition: all 0.2s ease;
  }

  .card:hover {
    border-color: var(--border-secondary);
  }

  details summary {
    user-select: none;
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details[open] summary span {
    transform: rotate(45deg);
  }

  .prose {
    color: var(--text-secondary);
  }

  .prose strong {
    color: var(--accent-primary);
  }
</style>

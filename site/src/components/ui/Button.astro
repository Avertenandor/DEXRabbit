---
const { href = '#', variant = 'primary', size = 'md' } = Astro.props;
const base = 'btn inline-flex items-center justify-center font-medium rounded-[var(--radius-2xl)] focus-visible:outline-none';
const v = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  ghost: 'btn-ghost'
}[variant];
const s = { 
  sm: 'px-3 py-2 text-sm', 
  md: 'px-4 py-2.5', 
  lg: 'px-6 py-3 text-lg' 
}[size];
---

<a href={href} class={`${base} ${v} ${s}`}>
  <slot />
</a>
